<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Themis Clothes</title>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Arvo&family=Dosis:wght@200;300;700&family=Merriweather:ital@0;1&family=Space+Mono&family=Work+Sans:wght@500;800&display=swap" rel="stylesheet">
    <link href="/css/home.css" rel="stylesheet" type="text/css" >
    
</head>
<header>
    <div class="banner-part">
        <div class="main-banner">
            <h1 class="main-title">Themis Clothes</h1>
        </div>
        <div class="user-profile">
            <div class="icon-container">
                <a href="/account">
                <img class="icon" src="https://static.vecteezy.com/system/resources/thumbnails/002/318/271/small/user-profile-icon-free-vector.jpg">
                <h4><%= user %></h4>
                </a>
            </div>
            <div class="icon-container">
                <a href="/cart">
                <img class="icon" style="padding-bottom: 2px;" src="data:image/png;base64,">
                <h4 style="margin-left: 6px;">cart</h4>
                </a>
            </div>
        </div>
    </div> 
    
    <div class="line-separator"></div>

    <nav>
        <ul class="nav-bar">
            <a href="/" class="nav-link">Home<li id='home-button' class="nav-item2"></li></a>
            <a href="/" class="nav-link">Articles<li id='articles-button' class="nav-item2"></li></a>
            <a href="/account" class="nav-link">Account<li id='account-button' class="nav-item2"></li></a>
        </ul>
    </nav>
    <div class="line-separator"></div>

    
</header>
<body>
    <div class="account-main">
        <div class="account-pic">
            <img src="./img/2449714.png">
        </div>
        <div class="account-info">
            
            <h3 id="username-acc" class="username-acc-c"><%= user %></h3>
            <br>
            <h3 id="email" class="email-c"><%= email %> </h3>

            <form action="/logout" method="post"><button id="logout" class="logout-button">Log out</button></form>
        </div>
    </div>
    <h2 class="lonely-h2">Previous Orders:</h2>
    <div class="checkout">
    <div class="items-list">
        <% if(orders.length > 0) { %>
            <% orders.map((ele, indx) => { %> 
        <table class="table-list">
            
            <tr>
                <th>Order: <%= ele.currentOrder %></th>
                <th>Product ID</th>
                <th>Quantity</th>
            </tr>
            <% ele.items.map((item, indx) => { %>   
            <tr>
                <td></td>
                <td><%= item.product_id %></td>
                <td>x <%= item.quantity %></td>
                
            </tr>
            <% }) %>
        </table>
        <br>
    <% }) }; %>
    </div>
</div>
    
</body>
</html>